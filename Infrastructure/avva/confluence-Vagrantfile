VAGRANTFILE_API_VERSION = "2"

Vagrant.configure(VAGRANTFILE_API_VERSION) do |config|

  config.vm.box = "debian/stretch64"

  config.vm.network "forwarded_port", guest: 1990, host: 1990
  config.vm.network "forwarded_port", guest: 8990, host: 8990
  config.vm.network "public_network", bridge: "eno1"

  config.vm.provider "virtualbox" do |vb|
    vb.gui = false
    vb.customize ["modifyvm", :id, "--memory", "1024"]
  end

  config.vm.provision "ansible" do |ansible|
    ansible.playbook = "debian-systemd.yml"
    ansible.verbose  = "vvv"
  end

  config.vm.provision "ansible" do |ansible|
    ansible.playbook = "confluence-vagrant.yml"
    ansible.verbose  = "vv"
  end

	config.vm.hostname = "confluence"
        config.vm.define "confluence"
end
